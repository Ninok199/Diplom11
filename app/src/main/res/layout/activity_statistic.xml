<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diplom11.View.StatisticActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:text="Statistic"
        app:layout_constraintBottom_toTopOf="@+id/textViewCorrectAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttonAllTime"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="99dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="20dp"
        android:onClick="onAllTimeStatisticClick"
        android:text="All Time"
        app:layout_constraintBottom_toTopOf="@+id/textViewNoCorrectAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textViewCorrectAnswer"
        android:layout_width="292dp"
        android:layout_height="26dp"
        android:text="Correct Answer :"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/textViewNoCorrectAnswer"
        android:layout_width="294dp"
        android:layout_height="30dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text=" No COrrect:"
        app:layout_constraintBottom_toTopOf="@+id/textViewBestCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCorrectAnswer" />

    <TextView
        android:id="@+id/textViewBestCategory"
        android:layout_width="289dp"
        android:layout_height="29dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Best Category:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNoCorrectAnswer" />

    <ImageButton
        android:id="@+id/backButt"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="312dp"
        android:layout_marginStart="16dp"
        android:onClick="OnBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/buttonDay"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:onClick="onDayStartisticClick"
        android:text="day"
        app:layout_constraintBottom_toTopOf="@+id/textViewCorrectAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>
